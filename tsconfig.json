{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
